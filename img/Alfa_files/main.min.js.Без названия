const swiper = new Swiper('.swiper', {
    slidesPerView: 2,
    autoplay: {
        delay: 2000,
        disableOnInteraction: false,
    },
    grid: {
        rows: 3,
        fill: 'row'
    },
    breakpoints: {
        1201: {
            slidesPerView: 4,
        },
        769: {
            slidesPerView: 3,
        }
    },
    pagination: {
        el: '.swiper-pagination',
        clickable: true,
    },
});

