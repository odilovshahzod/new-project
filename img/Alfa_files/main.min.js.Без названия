});

// Open Navbar
$('.ham').on('click', function () {
    toggleMobileNavbar();
});

// Close Navbar and go to id

$('.mob-nav a').on('click', () => {
    toggleMobileNavbar();
});

// Overlay

$('.mob-nav .overlay').on('click', () => {
    toggleMobileNavbar();
});

function toggleMobileNavbar() {
    $('body').toggleClass('active');
    $('.ham').toggleClass('active');
    $('.mob-nav').toggleClass('active');
    $('.mob-nav .overlay').toggleClass('active');
}

function toggleHam(el) {
    el.classList.toggle('open')
}

const introSliderTimeOut = document.querySelector('.introSlider').getAttribute('data-time-out')

let swiper1 = new Swiper(".introSlider", {
    // loop: true,
    allowTouchMove: false,
    pagination: {
        el: ".swiper-pagination",
        clickable: true
    },
    autoplay: {
        disableOnInteraction: false,
        delay: +introSliderTimeOut
    },
    disableOnInteraction: false,
});
